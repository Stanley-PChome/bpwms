<?xml version="1.0" encoding="utf-8"?>
<uiLib:Wms3plUserControl x:Class="Wms3pl.WpfClient.P19.Views.P1907020000" xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" xmlns:uiLib="clr-namespace:Wms3pl.WpfClient.UILib;assembly=Wms3pl.WpfClient.UILib" xmlns:controls="clr-namespace:Wms3pl.WpfClient.UILib.Controls;assembly=Wms3pl.WpfClient.UILib" xmlns:common="clr-namespace:Wms3pl.WpfClient.Common;assembly=Wms3pl.WpfClient.Common" xmlns:viewModel="clr-namespace:Wms3pl.WpfClient.P19.ViewModel" xmlns:Properties="clr-namespace:Wms3pl.WpfClient.P19.Properties" xmlns:res="clr-namespace:Wms3pl.WpfClient.Resources;assembly=Wms3pl.WpfClient.Resources" xmlns:converters="clr-namespace:Wms3pl.WpfClient.Common.Converters;assembly=Wms3pl.WpfClient.Common" xmlns:System="clr-namespace:System;assembly=mscorlib" xmlns:utitliy="clr-namespace:Wms3pl.WpfClient.P19.Utitliy" x:Name="Window" Margin="0,0,0,0" HorizontalAlignment="Stretch" FontSize="18" MinWidth="800" MinHeight="600" controls:PermissionService.FunctionId="P1907020000" controls:PermissionService.FunctionName="查詢轉檔" FormException="{Binding Exception}">
  <uiLib:Wms3plUserControl.DataContext>
    <viewModel:P1907020000_ViewModel x:Name="Vm" />
  </uiLib:Wms3plUserControl.DataContext>
  <uiLib:Wms3plUserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Wms3pl.WpfClient.UILib;component/Generic.xaml" />
      </ResourceDictionary.MergedDictionaries>
      <common:NotConverter x:Key="NotConverter" />
      <converters:BoolToVisiablityConverter x:Key="BoolToVisiablityConverter" />
      <converters:StringToXmlDocumentConverter x:Key="StringToXmlDocumentConverter" />
      <converters:OwnerItemsSourceConverter x:Key="OwnerItemsSourceConverter" />
      <DataTemplate x:Key="TextBoxTemplate">
        <TextBox Background="Yellow" Style="{StaticResource TxtStyle}">
          <TextBox.Text>
            <Binding Path="AddedProp" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" TargetNullValue="{x:Null}"></Binding>
          </TextBox.Text>
        </TextBox>
      </DataTemplate>
      <DataTemplate x:Key="DatePickerTemplate">
        <DatePicker SelectedDate="{x:Static System:DateTime.Today}" Background="Yellow" Style="{StaticResource DateStyle}">
          <DatePicker.Text>
            <Binding Path="AddedProp" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
              <!--<Binding.ValidationRules>
                <utitliy:NotNullNorBlankValidationRule />
              </Binding.ValidationRules>-->
            </Binding>
          </DatePicker.Text>
        </DatePicker>
      </DataTemplate>
      <DataTemplate x:Key="Combo1Template">
        <ComboBox SelectedValuePath="Value" DisplayMemberPath="Name" IsSynchronizedWithCurrentItem="True" Style="{StaticResource ComboStyle}">
          <ComboBox.ItemsSource>
            <MultiBinding Converter="{StaticResource OwnerItemsSourceConverter}">
              <Binding Path="Item.FUN_ID" />
              <Binding Path="DataContext.AllIdListDict" RelativeSource="{RelativeSource AncestorType={x:Type uiLib:Wms3plUserControl}}" />
            </MultiBinding>
          </ComboBox.ItemsSource>
          <ComboBox.SelectedValue>
            <Binding RelativeSource="{RelativeSource FindAncestor, AncestorType={x:Type DataGridRow}}" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" Path="DataContext.AddedProp">
              <Binding.ValidationRules>
                <utitliy:NotNullNorBlankValidationRule ValidatesOnTargetUpdated="True" />
              </Binding.ValidationRules>
            </Binding>
          </ComboBox.SelectedValue>
        </ComboBox>
      </DataTemplate>
    </ResourceDictionary>
  </uiLib:Wms3plUserControl.Resources>
  <telerik:RadBusyIndicator x:Name="GridBusyIndicator" BusyContent="{x:Static res:Resources.Loading}" IsIndeterminate="False" IsBusy="{Binding IsBusy}">
    <uiLib:BasicMaster x:Name="Master">
      <uiLib:BasicMaster.ToolBarArea>
        <WrapPanel>
          <Button Style="{StaticResource SearchButton}" controls:PermissionService.FunctionId="BP1907020001" Command="{Binding SearchCommand}" />
          <Button Style="{StaticResource CancelButton}" controls:PermissionService.FunctionId="BP1907020002" Command="{Binding CancelCommand}" />
          <Button Style="{StaticResource ExportButton}" controls:PermissionService.FunctionId="BP1907020003" Command="{Binding ExportCommand}" ToolTip="匯出EXCEL" />
          <Button Style="{StaticResource ExportButton}" controls:PermissionService.FunctionId="BP1907020004" Command="{Binding ExportCsvCommand}" Content="{x:Static res:Resources.CSV}" ToolTip="匯出CSV" />
          <Button Style="{StaticResource CopyButton}" controls:PermissionService.FunctionId="BP1907020005" Command="{Binding CopyCommand}" />
          <Button Style="{StaticResource ExportButton}" controls:PermissionService.FunctionId="BP1907020006" Command="{Binding ExportXmlCommand}" Content="{x:Static res:Resources.XML}" ToolTip="匯出XML" />
        </WrapPanel>
      </uiLib:BasicMaster.ToolBarArea>
      <uiLib:BasicMaster.MainContent>
        <TabControl x:Name="LayoutRoot">
          <TabControl.BindingGroup>
            <BindingGroup Name="errorGroup" />
          </TabControl.BindingGroup>
          <TabItem Header="{x:Static res:Resources.Main}" Width="Auto">
            <DockPanel LastChildFill="True">
              <!-- 由此處開始加入畫面項目 -->
              <GroupBox Header="{x:Static res:Resources.QueryCondition}" DockPanel.Dock="Top">
                <Expander IsExpanded="True">
                  <WrapPanel DockPanel.Dock="TOP" Margin="5">
                    <Grid>
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                      </Grid.ColumnDefinitions>
                      <Label Grid.Row="0" Grid.Column="0" Content="{x:Static Properties:Resources.QueryClass}" Style="{StaticResource LbTitleStyle}" Height="33" VerticalAlignment="Top" />
											<ComboBox Grid.Row="0" Grid.Column="1" Style="{StaticResource ComboStyle}" ItemsSource="{Binding QueryGroupList}" Height="33" VerticalAlignment="Top" SelectedValue="{Binding SelectedQueryGroup,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged }" SelectedValuePath="Value" DisplayMemberPath="Name"></ComboBox>
                      <Label Grid.Row="0" Grid.Column="2" Content="{x:Static Properties:Resources.QueryItem}" Style="{StaticResource LbTitleStyle}" Margin="10, 3, 3, 3" Height="33" VerticalAlignment="Top" />
                      <ComboBox Grid.Row="0" Grid.Column="3" Style="{StaticResource ComboStyle}" ItemsSource="{Binding QueryItemList}" Height="33" VerticalAlignment="Top" Width="Auto" MinWidth="150" SelectedItem="{Binding SelectedQueryItem,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged }" SelectedValuePath="QID" DisplayMemberPath="NAME"></ComboBox>
                      <Label Grid.Row="0" Grid.Column="4" Content="{x:Static Properties:Resources.QueryParams}" Style="{StaticResource LbTitleStyle}" Margin="10, 3, 3, 3" Height="33" VerticalAlignment="Top" Visibility="{Binding ShowQueryParam, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToVisiablityConverter}}" />
                      <DataGrid Grid.Row="0" Grid.Column="5" Style="{StaticResource DgStyle}" ItemsSource="{Binding QueryParamsList}" Visibility="{Binding ShowQueryParam, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToVisiablityConverter}}" SelectedItem="{Binding SelectedQueryParam,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                        <DataGrid.Columns>
                          <DataGridTextColumn Header="{x:Static Properties:Resources.SEQ}" Binding="{Binding Item.SEQ}" />
                          <DataGridTextColumn Header="{x:Static Properties:Resources.GRP_NAME}" Binding="{Binding Item.PNAME}" />
                          <DataGridTemplateColumn Header="{x:Static Properties:Resources.DATA_VALUE}">
                            <DataGridTemplateColumn.CellTemplateSelector>
                              <viewModel:QueryParamTemplateSelector TextBoxTemplate="{StaticResource TextBoxTemplate}" DatePickerTemplate="{StaticResource DatePickerTemplate}" Combo1Template="{StaticResource Combo1Template}" />
                            </DataGridTemplateColumn.CellTemplateSelector>
                          </DataGridTemplateColumn>
                        </DataGrid.Columns>
                      </DataGrid>
                    </Grid>
                  </WrapPanel>
                </Expander>
              </GroupBox>
              <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" Visibility="{Binding ShowQueryResult, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToVisiablityConverter}}">
                  <TextBlock TextWrapping="Wrap" Text="{Binding Items.Count, ElementName=dg, StringFormat=符合條件資料筆數，共：\{0\}筆!}" />
                  <TextBlock TextWrapping="Wrap" Text="{Binding TimeSpan, StringFormat=花去\{0\}秒!}" />
                </StackPanel>
                <GroupBox Header="{x:Static res:Resources.OueryResult}" DockPanel.Dock="Top">
                  <Expander IsExpanded="True">
                    <DockPanel Visibility="{Binding ShowQueryResult, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BoolToVisiablityConverter}}">
                      <!--<ScrollViewer >-->
                      <DockPanel>
                        <DataGrid Name="dg" Style="{StaticResource DgStyle}" ItemsSource="{Binding Data}" AutoGenerateColumns="True" HorizontalScrollBarVisibility="Auto" DockPanel.Dock="Top" AutoGeneratingColumn="Dg_OnAutoGeneratingColumn"></DataGrid>
                      </DockPanel>
                      <!--</ScrollViewer>-->
                    </DockPanel>
                  </Expander>
                </GroupBox>
              </DockPanel>
            </DockPanel>
          </TabItem>
        </TabControl>
      </uiLib:BasicMaster.MainContent>
    </uiLib:BasicMaster>
  </telerik:RadBusyIndicator>
</uiLib:Wms3plUserControl>