                <Label Style="{StaticResource LbStyle}" Content="{x:Static Properties:Resources.ItemCodeDetail}" />
                <TextBox Style="{StaticResource TxtStyle}" Text="{Binding ItemCode,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" KeyDown="UIElement_OnKeyDown" Name="txtItemCode" />
              </WrapPanel>
            </DockPanel>
          </TabItem>
        </TabControl>
