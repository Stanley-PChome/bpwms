<?xml version="1.0" encoding="utf-8"?>
<uiLib:Wms3plUserControl x:Class="Wms3pl.WpfClient.P02.Views.P0203010000" xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" xmlns:uiLib="clr-namespace:Wms3pl.WpfClient.UILib;assembly=Wms3pl.WpfClient.UILib" xmlns:controls="clr-namespace:Wms3pl.WpfClient.UILib.Controls;assembly=Wms3pl.WpfClient.UILib" xmlns:common="clr-namespace:Wms3pl.WpfClient.Common;assembly=Wms3pl.WpfClient.Common" xmlns:viewModel="clr-namespace:Wms3pl.WpfClient.P02.ViewModel" xmlns:Properties="clr-namespace:Wms3pl.WpfClient.P02.Properties" xmlns:res="clr-namespace:Wms3pl.WpfClient.Resources;assembly=Wms3pl.WpfClient.Resources" xmlns:converters="clr-namespace:Wms3pl.WpfClient.Common.Converters;assembly=Wms3pl.WpfClient.Common" x:Name="Window" Margin="0,0,0,0" HorizontalAlignment="Stretch" FontSize="18" MinWidth="800" controls:PermissionService.FunctionId="P0203010000" controls:PermissionService.FunctionName="調撥上架" FormException="{Binding Exception}">
  <uiLib:Wms3plUserControl.DataContext>
    <viewModel:P0203010000_ViewModel x:Name="Vm" />
  </uiLib:Wms3plUserControl.DataContext>
  <uiLib:Wms3plUserControl.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Wms3pl.WpfClient.UILib;component/Generic.xaml" />
      </ResourceDictionary.MergedDictionaries>
      <common:NotConverter x:Key="NotConverter" />
      <converters:DateTimeToStringConverter x:Key="DateTimeToStringConverter" />
      <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
      <converters:StringToLocCodeConverter x:Key="StringToLocCodeConverter" />
    </ResourceDictionary>
  </uiLib:Wms3plUserControl.Resources>
  <telerik:RadBusyIndicator x:Name="GridBusyIndicator" BusyContent="{x:Static res:Resources.Loading}" IsIndeterminate="False" IsBusy="{Binding IsBusy}">
    <uiLib:BasicMaster x:Name="Master">
      <uiLib:BasicMaster.ToolBarArea>
        <WrapPanel>
          <Button Style="{StaticResource SearchButton}" controls:PermissionService.FunctionId="BP0203010001" Command="{Binding SearchCommand}" />
          <Button Style="{StaticResource SaveButton}" controls:PermissionService.FunctionId="BP0203010006" Command="{Binding SaveCommand}" IsEnabled="{Binding Path=(Validation.HasError), ElementName=LayoutRoot, Converter={StaticResource NotConverter}}" />
        </WrapPanel>
      </uiLib:BasicMaster.ToolBarArea>
      <uiLib:BasicMaster.MainContent>
        <TabControl x:Name="LayoutRoot">
          <TabControl.BindingGroup>
            <BindingGroup Name="errorGroup" />
          </TabControl.BindingGroup>
          <TabItem Header="{x:Static res:Resources.Main}" Width="Auto">
            <DockPanel>
              <!-- 由此處開始加入畫面項目 -->
              <DockPanel DockPanel.Dock="Left">
                <WrapPanel DockPanel.Dock="Top">
                  <StackPanel>
                    <Grid>
                      <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                      </Grid.RowDefinitions>
                      <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                      </Grid.ColumnDefinitions>
                      <Label Style="{StaticResource LbTitleStyle}" Content="{x:Static Properties:Resources.DC_CODE}" Grid.Row="0" Grid.Column="0" />
                      <ComboBox Style="{StaticResource ComboStyle}" Grid.Row="0" Grid.Column="1" ItemsSource="{Binding DcList, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="Name" SelectedValuePath="Value" SelectedValue="{Binding SelectedDcCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                      <Label Style="{StaticResource LbTitleStyle}" Content="{x:Static Properties:Resources.AllocationDate}" Grid.Row="1" Grid.Column="0" />
                      <DatePicker Style="{StaticResource DateStyle}" SelectedDate="{Binding AllocationDate,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" />
                      <RadioButton Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Content="{x:Static Properties:Resources.RabQuery1}" VerticalContentAlignment="Center" GroupName="rbQuery" IsChecked="{Binding RabQuery1,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                      <TextBox Grid.Row="3" Grid.Column="0" Style="{StaticResource TxtStyle}" Width="250" Grid.ColumnSpan="2" MaxLength="20" InputMethod.IsInputMethodEnabled="False" Text="{Binding AllocationNo,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding RabQuery1}" />
                      <RadioButton Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Content="{x:Static Properties:Resources.RabQuery2}" VerticalContentAlignment="Center" GroupName="rbQuery" IsChecked="{Binding RabQuery2,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                  </StackPanel>
                </WrapPanel>
                <telerik:RadTreeView IsOptionElementsEnabled="False" Name="TreeView" Width="255" HorizontalAlignment="Left" SelectionMode="Single" Margin="3" IsTriStateMode="False" ItemsSource="{Binding AllocationNoList}" BorderBrush="DarkGray" BorderThickness="1" IsVirtualizing="True" SelectedItem="{Binding SelectedAllocationNo,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PreviewMouseLeftButtonDown="TreeViewItem_PreviewMouseLeftButtonDown" ScrollViewer.VerticalScrollBarVisibility="Auto" FontSize="14" IsEnabled="{Binding RabQuery2}" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                  <telerik:RadTreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding DelvNos}">
                      <TreeViewItem Header="{Binding Name}" HorizontalAlignment="Left" />
                    </HierarchicalDataTemplate>
                  </telerik:RadTreeView.ItemTemplate>
                  <telerik:RadTreeView.ItemContainerStyle>
                    <Style TargetType="telerik:RadTreeViewItem">
                      <Setter Property="IsExpanded" Value="True" />
                      <Setter Property="HorizontalAlignment" Value="Left" />
                    </Style>
                  </telerik:RadTreeView.ItemContainerStyle>
                </telerik:RadTreeView>
              </DockPanel>
              <DockPanel DockPanel.Dock="Right" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                <WrapPanel DockPanel.Dock="Top" HorizontalAlignment="Right">
                  <Button Content="{x:Static Properties:Resources.IsSelected}" controls:PermissionService.FunctionId="BP0203010007" Command="{Binding SerialLocCheckCommand}" />
                </WrapPanel>
                <DataGrid Style="{StaticResource DgStyle}" SelectionUnit="FullRow" SelectionMode="Single" IsReadOnly="False" ItemsSource="{Binding F1510Datas, UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding SelectedF1510Data,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" CellStyle="{ StaticResource SingleClickEdit}">
                  <DataGrid.Columns>
                    <DataGridCheckBoxColumn Binding="{Binding IsSelected,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                      <DataGridCheckBoxColumn.HeaderTemplate>
                        <DataTemplate>
                          <CheckBox IsChecked="{Binding IsSelectedAll, ElementName=Vm, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Command="{Binding CheckAllCommand, ElementName=Vm}" Content="{x:Static Properties:Resources.IsSelectedAll}"></CheckBox>
                        </DataTemplate>
                      </DataGridCheckBoxColumn.HeaderTemplate>
                      <DataGridCheckBoxColumn.ElementStyle>
                        <Style TargetType="CheckBox">
                          <Setter Property="VerticalAlignment" Value="Center" />
                          <Setter Property="HorizontalAlignment" Value="Center" />
                        </Style>
                      </DataGridCheckBoxColumn.ElementStyle>
                    </DataGridCheckBoxColumn>
                    <DataGridTextColumn IsReadOnly="True" Header="{x:Static Properties:Resources.SelectedStartDate}" Binding="{Binding ALLOCATION_DATE,Converter={StaticResource DateTimeToStringConverter}, ConverterParameter=yyyy/MM/dd }"></DataGridTextColumn>
                    <DataGridTextColumn IsReadOnly="True" Header="{x:Static Properties:Resources.ALLOCATION_NO}" Binding="{Binding ALLOCATION_NO}"></DataGridTextColumn>
                    <DataGridTextColumn IsReadOnly="True" Header="{x:Static Properties:Resources.ItemCodeDetail}" Binding="{Binding ITEM_CODE}"></DataGridTextColumn>
                    <DataGridTextColumn IsReadOnly="True" Header="{x:Static Properties:Resources.P02020301_ITEM_NAME}" Binding="{Binding ITEM_NAME}"></DataGridTextColumn>
                    <DataGridTextColumn IsReadOnly="True" Header="{x:Static Properties:Resources.QTY}" Binding="{Binding QTY}"></DataGridTextColumn>
                    <DataGridTextColumn IsReadOnly="True" Header="{x:Static Properties:Resources.MAKE_NO}" Binding="{Binding MAKE_NO}"></DataGridTextColumn>
                    <DataGridTextColumn IsReadOnly="True" Header="{x:Static Properties:Resources.VALI_DATE}" Binding="{Binding VALID_DATE,StringFormat=\{0:yyyy/MM/dd\}}"></DataGridTextColumn>
                    <DataGridTextColumn IsReadOnly="True" Header="{x:Static Properties:Resources.SUG_LOC_CODE}" Binding="{Binding SUG_LOC_CODE,Converter={StaticResource StringToLocCodeConverter}}"></DataGridTextColumn>
                    <DataGridTemplateColumn Header="{x:Static Properties:Resources.TAR_LOC_CODE}" IsReadOnly="False">
                      <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
													<Button Content="{Binding TAR_LOC_CODE,Converter={StaticResource StringToLocCodeConverter}}" Click="BtnLocCode_OnClick" controls:PermissionService.FunctionId="BP0203010008" controls:PermissionService.FunctionName="上架儲位" />
                        </DataTemplate>
                      </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridCheckBoxColumn IsReadOnly="True" Header="{x:Static Properties:Resources.BUNDLE_SERIALLOC}" Binding="{Binding BUNDLE_SERIALLOC,Converter={StaticResource StringToBoolConverter}}">
                      <DataGridCheckBoxColumn.ElementStyle>
                        <Style TargetType="CheckBox">
                          <Setter Property="VerticalAlignment" Value="Center" />
                          <Setter Property="HorizontalAlignment" Value="Center" />
                          <Setter Property="IsEnabled" Value="False" />
                        </Style>
                      </DataGridCheckBoxColumn.ElementStyle>
                    </DataGridCheckBoxColumn>
                    <DataGridCheckBoxColumn IsReadOnly="True" Header="{x:Static Properties:Resources.CHECK_SERIAL}" Binding="{Binding CHECK_SERIALNO,Converter={StaticResource StringToBoolConverter}}">
                      <DataGridCheckBoxColumn.ElementStyle>
                        <Style TargetType="CheckBox">
                          <Setter Property="VerticalAlignment" Value="Center" />
                          <Setter Property="HorizontalAlignment" Value="Center" />
                          <Setter Property="IsEnabled" Value="False" />
                        </Style>
                      </DataGridCheckBoxColumn.ElementStyle>
                    </DataGridCheckBoxColumn>
                    <DataGridCheckBoxColumn IsReadOnly="True" Header="{x:Static Properties:Resources.P0203010000_IS_NEW_ITEM}" Binding="{Binding IS_NEW_ITEM,Converter={StaticResource StringToBoolConverter}}">
                        <DataGridCheckBoxColumn.ElementStyle>
                            <Style TargetType="CheckBox">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="IsEnabled" Value="False" />
                            </Style>
                        </DataGridCheckBoxColumn.ElementStyle>
                    </DataGridCheckBoxColumn>
                  </DataGrid.Columns>
                </DataGrid>
              </DockPanel>
            </DockPanel>
          </TabItem>
        </TabControl>
      </uiLib:BasicMaster.MainContent>
    </uiLib:BasicMaster>
  </telerik:RadBusyIndicator>
</uiLib:Wms3plUserControl>