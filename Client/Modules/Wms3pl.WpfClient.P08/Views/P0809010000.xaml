<?xml version="1.0" encoding="utf-8"?>
<uiLib:Wms3plWindow x:Class="Wms3pl.WpfClient.P08.Views.P0809010000" xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d" xmlns:uiLib="clr-namespace:Wms3pl.WpfClient.UILib;assembly=Wms3pl.WpfClient.UILib" xmlns:controls="clr-namespace:Wms3pl.WpfClient.UILib.Controls;assembly=Wms3pl.WpfClient.UILib" xmlns:viewModel="clr-namespace:Wms3pl.WpfClient.P08.ViewModel" xmlns:converters="clr-namespace:Wms3pl.WpfClient.Common.Converters;assembly=Wms3pl.WpfClient.Common" xmlns:Properties="clr-namespace:Wms3pl.WpfClient.P08.Properties" xmlns:res="clr-namespace:Wms3pl.WpfClient.Resources;assembly=Wms3pl.WpfClient.Resources" x:Name="Window" Margin="0,0,0,0" HorizontalAlignment="Stretch" FontSize="16" ResizeMode="NoResize" WindowStyle="None" WindowState="Maximized" Closing="Window_Closing" Title="出貨裝車" controls:PermissionService.FunctionId="P0809010000" controls:PermissionService.FunctionName="出貨裝車" controls:PermissionService.CheckPermission="False" FormException="{Binding Exception}">
  <uiLib:Wms3plWindow.DataContext>
    <viewModel:P0809010000_ViewModel x:Name="Vm" />
  </uiLib:Wms3plWindow.DataContext>
  <uiLib:Wms3plWindow.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Wms3pl.WpfClient.UILib;component/Generic.xaml" />
      </ResourceDictionary.MergedDictionaries>
      <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
    </ResourceDictionary>
  </uiLib:Wms3plWindow.Resources>
  <telerik:RadBusyIndicator x:Name="GridBusyIndicator" BusyContent="{x:Static res:Resources.Loading}" IsIndeterminate="False" IsBusy="{Binding IsBusy}">
    <uiLib:BasicMaster x:Name="Master">
      <uiLib:BasicMaster.MainContent>
        <DockPanel Style="{StaticResource WindowDockPanelStyle}">
          <WrapPanel DockPanel.Dock="Top" Orientation="Vertical" Margin="5" />
          <Viewbox>
            <DockPanel>
              <DockPanel>
                <DockPanel DockPanel.Dock="Top">
                  <DockPanel>
                    <WrapPanel DockPanel.Dock="Top">
                      <TextBlock Text="{x:Static res:Resources.Dc}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="5" FontSize="20" FontStyle="Normal" />
                      <ComboBox Style="{StaticResource ComboStyle}" ItemsSource="{Binding DcCodes}" SelectedValue="{Binding SelectedDcCode,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Value" DisplayMemberPath="Name" DockPanel.Dock="Left" MinWidth="150" Margin="5" HorizontalAlignment="Left" />
                      <TextBlock Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" FontStyle="Normal" Text="{x:Static Properties:Resources.SearchTakeDate}" />
                      <DatePicker Margin="5" VerticalAlignment="Center" HorizontalAlignment="Left" SelectedDate="{Binding SearchTakeDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </WrapPanel>
                    <WrapPanel DockPanel.Dock="Top">
                      <TextBlock Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" Text="{x:Static Properties:Resources.SelectedChkOutTime}" />
                      <ComboBox Style="{StaticResource ComboStyle}" ItemsSource="{Binding ChkOutTime}" SelectedValue="{Binding SelectedChkOutTime,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Value" DisplayMemberPath="Name" DockPanel.Dock="Left" MinWidth="150" Margin="5" />
                      <TextBlock Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="20" Text="{x:Static Properties:Resources.SelectedDelvCompany}" />
                      <ComboBox Style="{StaticResource ComboStyle}" ItemsSource="{Binding DelvCompany}" SelectedValue="{Binding SelectedDelvCompany,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" SelectedValuePath="Value" DisplayMemberPath="Name" DockPanel.Dock="Left" MinWidth="150" Margin="5" />
                    </WrapPanel>
                  </DockPanel>
                  <StackPanel HorizontalAlignment="Right">
                    <Button Margin="5" Content="{x:Static Properties:Resources.Exist}" controls:PermissionService.FunctionId="BP0809010001" IsCancel="True" />
                    <Button Margin="5" Content="{x:Static res:Resources.Query}" controls:PermissionService.FunctionId="BP0809010002" Command="{Binding SearchCommand}" />
                  </StackPanel>
                </DockPanel>
                <DockPanel DockPanel.Dock="Top">
                  <TextBlock Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Text="{x:Static Properties:Resources.CAR_NO}" />
                  <TextBox MaxLength="7" Margin="5" TextAlignment="Center" VerticalContentAlignment="Center" AutoWordSelection="True" Width="150" Text="{Binding Car_No_A ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                  <TextBox MaxLength="7" Margin="5" TextAlignment="Center" VerticalContentAlignment="Center" AutoWordSelection="True" Width="150" Text="{Binding Car_No_B ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                  <TextBox MaxLength="7" Margin="5" TextAlignment="Center" VerticalContentAlignment="Center" AutoWordSelection="True" Width="150" Text="{Binding Car_No_C ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                  <Button Margin="5" Content="{x:Static Properties:Resources.Car_No_A}" controls:PermissionService.FunctionId="BP0809010003" Command="{Binding UpdCarNoCommand}" IsEnabled="{Binding UpdCarNoEnabled, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
                <DockPanel DockPanel.Dock="Top">
                  <Button Margin="5" Content="{x:Static Properties:Resources.ViewFile}" Style="{StaticResource BtnStyle}" controls:PermissionService.FunctionId="BP0809010004" HorizontalAlignment="Left" FontSize="24" controls:PermissionService.FunctionName="檢視圖檔" Click="btnViewFile_Click" IsEnabled="{Binding ViewFileEnabled, UpdateSourceTrigger=PropertyChanged}" />
                  <Button Margin="5" Content="{x:Static Properties:Resources.ItemImageSource}" Style="{StaticResource BtnStyle}" controls:PermissionService.FunctionId="BP0809010005" HorizontalAlignment="Left" FontSize="24" controls:PermissionService.FunctionName="上傳圖檔" Click="btnFileUpload_Click" IsEnabled="{Binding UploadFileEnabled, UpdateSourceTrigger=PropertyChanged}" />
                  <Button Margin="5" Content="{x:Static Properties:Resources.PrintTakeDetail}" controls:PermissionService.FunctionId="BP0809010006" HorizontalAlignment="Right" Command="{Binding PrintCommand}" IsEnabled="{Binding PrintEnabled, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
                <DataGrid Margin="2" Height="270" Width="710" Style="{StaticResource DgStyle}" FontSize="20" SelectedItem="{Binding SelectedData,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ItemsSource="{Binding DataList}" Name="dgList" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                  <DataGrid.Columns>
                    <DataGridTextColumn Header="{x:Static Properties:Resources.SearchTakeDate}" Binding="{Binding TAKE_DATE,StringFormat=\{0:yyyy/MM/dd\}}" />
                    <DataGridTextColumn Header="{x:Static Properties:Resources.SelectedChkOutTime}" Binding="{Binding TAKE_TIME}" />
                    <DataGridTextColumn Header="{x:Static Properties:Resources.SearchDelvDate}" Binding="{Binding DELV_DATE,StringFormat=\{0:yyyy/MM/dd\}}" />
                    <DataGridTextColumn Header="{x:Static Properties:Resources.SearchPickTime}" Binding="{Binding PICK_TIME}" />
                    <DataGridTextColumn Header="{x:Static Properties:Resources.LOAD_OWNER_QTY}" Binding="{Binding LOAD_OWNER_QTY}" />
                    <DataGridTextColumn Header="{x:Static Properties:Resources.LOAD_OWNER_OK_QTY}" Binding="{Binding LOAD_OWNER_OK_QTY}" />
                    <DataGridTextColumn Header="{x:Static Properties:Resources.SelectedDelvCompany}" Binding="{Binding ALL_COMP}" />
                    <DataGridTextColumn Header="{x:Static Properties:Resources.PACKAGE_BOX_NO}" Binding="{Binding PACKAGE_BOX_NO}" />
                    <DataGridCheckBoxColumn Header="{x:Static Properties:Resources.ISSEAL}" Binding="{Binding ISSEAL,Converter={StaticResource StringToBoolConverter}}" />
                    <DataGridTextColumn Header="{x:Static Properties:Resources.CAR_NO}" Binding="{Binding CAR_NO_A}" />
                    <DataGridTextColumn Header="{x:Static Properties:Resources.CAR_NO}" Binding="{Binding CAR_NO_B}" />
                    <DataGridTextColumn Header="{x:Static Properties:Resources.CAR_NO}" Binding="{Binding CAR_NO_C}" />
                  </DataGrid.Columns>
                </DataGrid>
              </DockPanel>
            </DockPanel>
          </Viewbox>
        </DockPanel>
      </uiLib:BasicMaster.MainContent>
    </uiLib:BasicMaster>
  </telerik:RadBusyIndicator>
</uiLib:Wms3plWindow>